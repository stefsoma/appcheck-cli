# Ignore specific files
files:
  secrets.json
  config/private_keys.json

# Ignore specific directories
directories:
  logs/
  tmp/

# Ignore specific keys
keys:
  apiKey
  authToken

# Ignore keys with specific prefixes
prefixes:
  temp_
  debug_

# Ignore keys with specific suffixes
suffixes:
  _test
  _dev

# Ignore keys that match specific patterns
patterns:
  ^test_key_.*  # Ignore all keys starting with "test_key_"
  ^.*_temp$     # Ignore all keys ending with "_temp"

# Ignore keys that contain numbers
keysWithNumbers: true
